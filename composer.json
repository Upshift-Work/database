{
  "name": "bosnadev/database",
  "description": "Eloquent Extended, added some PostgreSQL features",
  "keywords": ["laravel", "eloquent", "database", "postgresql", "database"],
  "license": "MIT",
  "homepage": "https://bosnadev.com",
  "authors": [
    {
      "name": "Mirza Pasic",
      "email": "mirza@bosnadev.com"
    },
    {
      "name": "Peter Haza",
      "email": "peter.haza@gmail.com"
    },
    {
      "name": "Breki Tomasson",
      "email": "breki.tomasson@gmail.com"
    }
  ],
  "require": {
    "ext-pdo": "*",
    "php": ">=8.1",
    "illuminate/database": "^10.0",
    "ramsey/uuid": "^4.7",
    "doctrine/dbal": "^2.5|^3.0"
  },
  "require-dev": {
    "brekitomasson/php-cs-fixer-breki-config": "^1.1.9",
    "mockery/mockery": "^1.5.1",
    "phpunit/phpunit": "^9.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Bosnadev\\Database\\": "src/Bosnadev/Database/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bosnadev\\DatabaseTests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "test": "vendor/bin/phpunit",
    "fix": "vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.php"
  }
}
